<Window x:Class="WPF_Practise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practise"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500" ResizeMode="NoResize">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button" Content="Press" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Cursor="Hand" Margin="200
                ,150,0,0" MouseEnter="MouseEnterAndMove" MouseMove="MouseEnterAndMove"/>

    </Grid>
</Window>
